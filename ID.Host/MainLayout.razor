@inherits IDLayoutComponent

<MudThemeProvider Theme="Theme" IsDarkMode="CurrentThemeMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AuthorizeView Roles="root_admin">
        <Authorized>
            <MudAppBar Color="Color.Primary">
                @AppTitle
                <MudSpacer />
                <ID.UI.Components.Base.Mode.AppModeFab ChangedCallback="ChangeThemeMode" />
                <LogoutFab Size="Size.Small" DisableElevation="true" />
            </MudAppBar>
            <MudDrawer Open="true">
                <WebNavMenuComponent>
                </WebNavMenuComponent>
            </MudDrawer>
            <MudMainContent Class="my-0 mt-2">
                <MudContainer MaxWidth="MaxWidth.ExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </Authorized>
        <Authorizing>
            <ID.UI.Components.Base.ServerLoading Show="true" />
        </Authorizing>
        <NotAuthorized>
            <ID.UI.Components.Base.Mode.AppModeFab ChangedCallback="ChangeThemeMode" Visible="false" />
            <Login />
        </NotAuthorized>
    </AuthorizeView>
</MudLayout>
